{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es5",
    "lib": ["es6"],
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "types",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "types": ["jest", "prettier"]
  },
  "exclude": [
    "node_modules",
    "gulpfile.ts",
    "rollup.config.ts",
    "rollup.config.weapp.ts",
    "dist",
    "types",
    "__tests__"
  ]
}
